<script id="ReportTemplateEditor" type="text/x-kendo-template">
    @*<form class="k-edit-form-container" action="/Crud/Update" enctype="multipart/form-data" method="post">*@
    <div class="k-edit-form-container">
        <div class="k-edit-label">
        </div>
        <div class="k-edit-field">
        </div>
    
        <div class="k-edit-label">
            <label for="Input"> Name </label>
        </div>
        <div class="k-edit-field">
            <input id="Input" type="text" class="k-input k-textbox" data-bind="value: Name" />
        </div>
        
        <div class="k-edit-label">
            <label for="ShowDateTime"> Show Date Time </label>
        </div>
        <div class="k-edit-field">
            <input type="checkbox" id="checkbox1" data-bind="checked: ShowDateTime" />
        </div>

        <div class="k-edit-label">
