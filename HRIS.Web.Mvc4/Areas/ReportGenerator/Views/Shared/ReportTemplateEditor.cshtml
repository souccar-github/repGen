        </div>
        <div class="k-edit-field">
            <input type="checkbox" id="checkbox3" data-bind="checked: ShowPageNumber" />
        </div>

        <div class="k-edit-label">
            <label for="ShowHeader"> Show Header </label>
        </div>
        <div class="k-edit-field">
            <input type="checkbox" id="checkbox4" data-bind="checked: ShowHeader" />
        </div>

        <div class="k-edit-label">
            <label for="ShowFooter"> Show Footer </label>
        </div>
        <div class="k-edit-field">
            <input type="checkbox" id="checkbox5" data-bind="checked: ShowFooter" />
        </div>
    
        <div class="k-edit-label">
            <label for="headerFiles"> Header Files </label>
        </div>
        <div class="k-edit-field">
            <input name="RtfReportHeader" id="RtfReportHeader" type="file" />
        </div>
    
        <div class="k-edit-label">
            <label for="footerFiles"> Footer Files </label>
        </div>
        <div class="k-edit-field">
            <input name="RtfReportFooter" id="RtfReportFooter" type="file"  />
        </div>

