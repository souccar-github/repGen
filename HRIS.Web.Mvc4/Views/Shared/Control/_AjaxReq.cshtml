<script>
    $(document).ajaxStart(function () {
        $("#wait").css("display", "block");
        $("body").addClass("ajax-protect");
    });
    $(document).ajaxComplete(function () {
        $("#wait").css("display", "none");
        $("body").removeClass("ajax-protect");
    });
</script>
    
<div 
    id="wait" 
    style="display:none;width:69px;z-index: 100;height:89px;position:absolute;top:50%;left:50%;padding:2px;">
    @{
        var themingName = Project.Web.Mvc4.Helpers.DomainExtensions.UserExtensions.CurrentUserTheming;
        var temp = Url.Content("~/Content/images/theme-" + themingName + "/loading-image.gif");
    }
    <img src='@temp' width="64" height="64" />
</div>